<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.ijsbss.rollover.MainFragment"
        android:label="@string/main_fragment_label"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_to_AddCategoryFragment"
            app:destination="@id/AddCategoryFragment" />

        <action
            android:id="@+id/action_MainFragment_to_CategoryFragment"
            app:destination="@id/CategoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/AddCategoryFragment"
        android:name="com.ijsbss.rollover.AddCategoryFragment"
        android:label="@string/add_category_fragment_label"
        tools:layout="@layout/fragment_add_category">

        <action
            android:id="@+id/action_AddCategoryFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>

    <fragment
        android:id="@+id/CategoryFragment"
        android:name="com.ijsbss.rollover.MainFragment"
        android:label="@string/category_fragment_label"
        tools:layout="@layout/category_screen">

        <action
            android:id="@+id/action_CategoryFragment_to_AddExpenseFragment"
            app:destination="@id/AddExpenseFragment" />
        <action
            android:id="@+id/action_CategoryFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>

    <fragment
        android:id="@+id/AddExpenseFragment"
        android:name="com.ijsbss.rollover.MainFragment"
        android:label= "@string/add_expense_fragment_label"
        tools:layout="@layout/add_expense_screen">

        <action
            android:id="@+id/action_AddExpenseFragment_to_CategoryFragment"
            app:destination="@id/CategoryFragment" />
    </fragment>

</navigation>